body {
    margin: 0;
    padding: 0;
    }

#map {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    }

.marker1 {
    background-image: url('marker1.jpg');
    background-size: cover;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    cursor: pointer;
    }

