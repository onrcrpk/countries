.mapboxgl-popup {
    max-width: 200px;
}
.mapboxgl-popup-content {
    text-align: center;
    font-family: 'Open Sans', sans-serif;
}


#btn-spin {
    font: bold 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
    background-color: #5800FF;
    color: #fff;
    position: absolute;
    top: 18px;
    left: 55px;
    z-index: 1;
    border: none;
    width: 125px;
    display: block;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 3px;
    }
#btn-spin:hover {
    color: black;
    background-color: #ffffff;
    }

#menu {
    position: absolute; 
    top: 0; 
    right: 0; 
    width: 399px; 
    text-align: right; 
    color:#FECD45; 
    padding-right: 4%;
    font-family: "Papyrus" ;
    font-size: 18px;
    font-weight: bold;
    }